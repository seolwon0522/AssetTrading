{
  "info": {
    "name": "AssetTrading 상품 API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "새 상품 등록",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"productTitle\": \"게이밍 노트북\",\n    \"productDesc\": \"RTX 3080 탑재 고성능 게이밍 노트북\",\n    \"productPrice\": 1500000,\n    \"productImg\": \"laptop.jpg\",\n    \"category\": \"{{category}}\",\n    \"tags\": [\"{{tag}}\", \"노트북\", \"전자제품\"],\n    \"isSellingAvailable\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/products/register/session",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "register",
            "session"
          ]
        },
        "description": "새 상품 등록 (세션 필요)"
      }
    },
    {
      "name": "키워드로 상품 검색",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/search?keyword={{keyword}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "search"
          ],
          "query": [
            {
              "key": "keyword",
              "value": "{{keyword}}"
            }
          ]
        },
        "description": "키워드로 상품 검색"
      }
    },
    {
      "name": "키워드로 상품 검색 (페이징)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/search/paged?keyword={{keyword}}&page=0&size=10&sortBy=productPrice&direction=DESC",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "search",
            "paged"
          ],
          "query": [
            {
              "key": "keyword",
              "value": "{{keyword}}"
            },
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "10"
            },
            {
              "key": "sortBy",
              "value": "productPrice"
            },
            {
              "key": "direction",
              "value": "DESC"
            }
          ]
        },
        "description": "페이징 처리된 상품 검색"
      }
    },
    {
      "name": "상품 ID로 조회",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "{{productId}}"
          ]
        },
        "description": "상품 ID로 상세 정보 조회"
      }
    },
    {
      "name": "상품 정보 업데이트",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"productTitle\": \"업데이트된 게이밍 노트북\",\n    \"productDesc\": \"RTX 3080 Ti 탑재 고성능 게이밍 노트북\",\n    \"productPrice\": 1700000,\n    \"productImg\": \"updated_laptop.jpg\",\n    \"category\": \"{{category}}\",\n    \"tags\": [\"{{tag}}\", \"노트북\", \"전자제품\", \"프리미엄\"],\n    \"isSellingAvailable\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "{{productId}}"
          ]
        },
        "description": "상품 정보 업데이트"
      }
    },
    {
      "name": "상품 상태 업데이트",
      "request": {
        "method": "PUT",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/status/{{productId}}?isSellingAvailable=false",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "status",
            "{{productId}}"
          ],
          "query": [
            {
              "key": "isSellingAvailable",
              "value": "false"
            }
          ]
        },
        "description": "상품 판매 가능 상태 업데이트"
      }
    },
    {
      "name": "상품 상태 상세 업데이트",
      "request": {
        "method": "PUT",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/products/status/detail/{{productId}}?status=RESERVED",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "status",
            "detail",
            "{{productId}}"
          ],
          "query": [
            {
              "key": "status",
              "value": "RESERVED"
            }
          ]
        },
        "description": "상품 상태 상세 업데이트 (AVAILABLE, UNAVAILABLE, RESERVED, SOLD_OUT)"
      }
    },
